{
  "name": "kashpages-production",
  "private": true,
  "version": "1.0.0",
  "description": "Production-grade monorepo for Kashpages - Kashmir business presence platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "latest",
    "husky": "^9.0.0",
    "prettier": "^3.2.5",
    "lint-staged": "^15.2.0"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
